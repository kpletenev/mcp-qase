{
  "name": "qase-mcp-server",
  "version": "1.0.0",
  "description": "MCP server implementation for Qase API - Run Qase TMS operations from AI assistants",
  "private": false,
  "type": "module",
  "bin": {
    "qase-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "mcp",
    "qase",
    "test-management",
    "tms",
    "ai",
    "claude",
    "cursor",
    "model-context-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kpletenev/mcp-qase"
  },
  "homepage": "https://github.com/kpletenev/mcp-qase#readme",
  "bugs": {
    "url": "https://github.com/kpletenev/mcp-qase/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run build && npm run test:package && npm run check:name",
    "postpublish": "echo 'Package published successfully!'",
    "test:pack": "npm pack --dry-run",
    "test:package": "node scripts/test-package.js",
    "check:name": "node scripts/check-name-availability.js",
    "check:security": "npm audit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "neverthrow": "^8.2.0",
    "qaseio": "^2.4.1",
    "ramda": "^0.30.1",
    "ts-pattern": "^5.6.2",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/ramda": "^0.30.2",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "lint-staged": "^12.0.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
